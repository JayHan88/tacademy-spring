<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id = "helloWithProperty" class="di.xml.Hello">
    <property name="name" value="Spring" />
    <property name="printer" ref="stringPrinter" />
    <property name="names">
      <list>
        <value>Spring</value>
        <value>IoC</value>
        <value>DI</value>
      </list>
    </property>
    <property name="nameAndAge">
      <map>
        <entry key="Kim" value="30" />
        <entry key="Lee" value="35" />
        <entry key="Han" value="40" />
      </map>
    </property>
  </bean>

  <bean id = "helloWithConstructorIndex" class="di.xml.Hello">
    <constructor-arg index="0" value="Spring" />
    <constructor-arg index="1" ref="stringPrinter" />
    <constructor-arg index="2">
      <list>
        <value>Spring</value>
        <value>IoC</value>
        <value>DI</value>
      </list>
    </constructor-arg>
    <constructor-arg index="3">
      <map>
        <entry key="Kim" value="30" />
        <entry key="Lee" value="35" />
        <entry key="Han" value="40" />
      </map>
    </constructor-arg>
  </bean>

  <bean id = "helloWithConstructorName" class="di.xml.Hello">
    <constructor-arg name="name" value="Spring" />
    <constructor-arg name="printer" ref="stringPrinter" />
    <constructor-arg name="names">
      <list>
        <value>Spring</value>
        <value>IoC</value>
        <value>DI</value>
      </list>
    </constructor-arg>
    <constructor-arg name="nameAndAge">
      <map>
        <entry key="Kim" value="30" />
        <entry key="Lee" value="35" />
        <entry key="Han" value="40" />
      </map>
    </constructor-arg>
  </bean>

  <bean id = "stringPrinter" class = "di.xml.StringPrinter" />
  <bean id = "consolePrinter" class = "di.xml.ConsolePrinter" />

</beans>